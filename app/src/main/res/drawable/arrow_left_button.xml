<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/button_color" />
            <stroke
                android:width="1dp"
                android:color="@color/button_stroke_color" />
        </shape>
    </item>

    <item
        android:width="@dimen/arrow_size"
        android:height="@dimen/arrow_size"
        android:bottom="@dimen/divider_margin_horizontal"
        android:drawable="@drawable/arrow_left"
        android:left="@dimen/divider_margin_horizontal"
        android:right="@dimen/divider_margin_horizontal"
        android:top="@dimen/divider_margin_horizontal" />
</layer-list>